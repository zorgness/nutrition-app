{% block body %}
<div class="form-container m-4">

    {{form_start(form)}}
      <div>{{form_row(form.label, {'attr':{'class': 'tex-danger'}})}}</div>
      <div>{{form_row(form.imageFile)}}</div>
      {{form_widget(form)}}
      <input type="submit" class="btn btn-primary" value="Submit"/>
    {{form_end(form)}}

</div>



{% endblock %}
